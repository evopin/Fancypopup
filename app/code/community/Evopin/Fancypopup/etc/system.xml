<?xml version="1.0"?>
<config>
	<sections>
		<featuredpopup translate="label" module="featuredpopup">
			<label>Featured Popup</label>
			<tab>shopgo</tab>
			<sort_order>10</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
					<label>Featured Popup Configuration</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<active translate="label">
							<label>Status</label>
							<frontend_type>select</frontend_type>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<source_model>adminhtml/system_config_source_enabledisable
							</source_model>
						</active>
						<jquery translate="label">
							<label>Enable jQuery</label>
							<frontend_type>select</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<source_model>adminhtml/system_config_source_yesno</source_model>
						</jquery>
						<effect>
							<label>Animation effect</label>
							<frontend_type>select</frontend_type>
							<source_model>Shopgo_Featuredpopup_Model_Adminhtml_System_Config_Source_Effect
							</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</effect>
						<close translate="label">
							<label>Show the close button</label>
							<frontend_type>select</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<source_model>adminhtml/system_config_source_yesno</source_model>
						</close>
						<overlay_close translate="label">
							<label>Hide when click outside</label>
							<frontend_type>select</frontend_type>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<source_model>adminhtml/system_config_source_yesno</source_model>
						</overlay_close>
						<always_show translate="label">
							<label>Always show</label>
							<frontend_type>select</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>Show the popup on each page view.</comment>
						</always_show>
						<cookie_lifetime>
    						<label>Cookie lifetime</label>
    						<frontend_type>text</frontend_type>
    						<sort_order>6</sort_order>
    						<show_in_default>1</show_in_default>
   							<show_in_website>1</show_in_website>
   							<show_in_store>1</show_in_store>
   							<comment>Cookie lifetime in seconds</comment>
   							<depends><always_show>0</always_show></depends>
						</cookie_lifetime>
					</fields>
				</general>
			</groups>
		</featuredpopup>
	</sections>
</config>